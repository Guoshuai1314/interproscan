<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <bean id="matchClient" class="uk.ac.ebi.interpro.scan.precalc.client.MatchHttpClient">
        <constructor-arg index="0" ref="unmarshaller"/>
    </bean>

    <bean id="jaxb2" abstract="true" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="classesToBeBound">
            <list>
                <value>uk.ac.ebi.interpro.scan.precalc.berkeley.model.BerkeleyMatchXML</value>
                <value>uk.ac.ebi.interpro.scan.precalc.berkeley.model.BerkeleyMatch</value>
                <value>uk.ac.ebi.interpro.scan.precalc.berkeley.model.BerkeleyLocation</value>
            </list>
        </property>
        <property name="marshallerProperties">
            <util:map value-type="java.lang.Boolean">
                <entry value="true">
                    <key>
                        <util:constant static-field="javax.xml.bind.Marshaller.JAXB_FORMATTED_OUTPUT"/>
                    </key>
                </entry>
            </util:map>
        </property>
    </bean>

    <bean id="servedXml" class="org.springframework.core.io.FileSystemResource">
        <constructor-arg type="java.io.File" value="uk/ac/ebi/interpro/scan/precalc/client/test-matches.xml"/>
    </bean>

    <!--<bean id="marshaller" parent="jaxb2"/>-->
    <bean id="unmarshaller" parent="jaxb2"/>

</beans>
