<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

    <batch:step id="tigrfamStep">
        <batch:tasklet ref="tigrfamTasklet"/>
        <!-- Following doesn't work -->
        <!--batch:tasklet ref="#{jobParameters[type]}"/-->
    </batch:step>

    <bean id="tigrfamTasklet"
          scope="step"
          class="uk.ac.ebi.interpro.scan.batch.tasklet.FileWritingSystemCommandTasklet">
        <property name="commandLineConversation">
            <bean class="uk.ac.ebi.interpro.scan.batch.cli.CommandLineConversationImpl"/>
        </property>
        <property name="outputResource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <!-- uuid and fileId only work with UniqueMultiResourcePartitioner -->
                <!--<constructor-arg value="${hmmer.working.dir}/#{stepExecutionContext[uuid]}.out"/>-->
                <!--<constructor-arg value="${working.dir}/#{stepExecutionContext[fileId]}.out"/>-->
                <constructor-arg value="#{stepExecutionContext[fileName]}.out"/>
            </bean>
        </property>
        <property name="command"   value="${hmmpfam.binary}"/>
        <property name="switches"  value="${hmmpfam.switches.tigrfam}"/>
        <property name="arguments" value="#{jobParameters[model]} #{stepExecutionContext[fileName]}"/>
    </bean>    
   
</beans>
