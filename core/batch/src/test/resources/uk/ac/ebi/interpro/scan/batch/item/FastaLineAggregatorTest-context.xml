<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

    <!-- Write Protein in FASTA format -->
    <!-- TODO: Wrap sequence at 80 characters - ask for help on SB forum (could not see way using Formatter) -->
    <bean id="fastaLineAggregator" class="org.springframework.batch.item.file.transform.FormatterLineAggregator">
        <property name="fieldExtractor">
            <bean class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
                <property name="names" value="md5,sequence"/>
            </bean>
        </property>
        <property name="format" value=">%s%n%s"/>
    </bean>

</beans>