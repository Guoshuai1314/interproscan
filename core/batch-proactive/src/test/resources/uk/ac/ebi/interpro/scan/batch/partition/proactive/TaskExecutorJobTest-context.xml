<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

    <import resource="application-context.xml"/>
    <import resource="job-context.xml"/>

    <batch:job id="taskExecutorJob">
         <batch:step id="partitionStep" parent="partitionStep:master" />
     </batch:job>

    <bean id="partitionHandler" class="org.springframework.batch.core.partition.support.TaskExecutorPartitionHandler">
        <property name="step" ref="echoStep"/>
    </bean>  

</beans>    