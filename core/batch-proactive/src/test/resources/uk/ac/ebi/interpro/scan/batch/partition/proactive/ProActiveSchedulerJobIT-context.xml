<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

    <import resource="application-context.xml"/>
    <import resource="job-context.xml"/>

    <batch:job id="schedulerJob">
        <batch:step id="partitionStep" parent="partitionStep:master"/>
    </batch:job>

    <bean id="partitionHandler" class="com.activeeon.sandbox.spring.ProActiveSchedulerPartitionHandler">
        <property name="proactiveSchedulerUrl"      value="${proactive.scheduler.url}"/>
        <property name="proactiveSchedulerUserName" value="${proactive.scheduler.user}"/>
        <property name="proactiveSchedulerPassword" value="${proactive.scheduler.password}"/>
        <property name="addClassPath"               value="true"/>
        <property name="step"                       ref="echoStep" />
    </bean>    

</beans>
