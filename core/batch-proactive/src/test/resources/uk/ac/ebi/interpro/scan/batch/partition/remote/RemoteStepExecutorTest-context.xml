<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

    <import resource="application-context.xml"/>

    <batch:step id="echoStep">
        <batch:tasklet ref="echoTasklet"/>
    </batch:step>

    <bean id="echoTasklet"
          class="org.springframework.batch.core.step.tasklet.MethodInvokingTaskletAdapter">
        <property name="targetObject" ref="log"/>
        <property name="targetMethod" value="info"/>
        <property name="arguments">
            <list>
                <value>Hello World!</value>
            </list>
        </property>
    </bean>

    <bean id="log" class="uk.ac.ebi.interpro.scan.batch.partition.proactive.LogSupport"/>

</beans>
