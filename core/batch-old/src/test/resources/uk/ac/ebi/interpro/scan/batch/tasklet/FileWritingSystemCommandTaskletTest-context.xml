<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

    <bean id="abstractTasklet"
          class="uk.ac.ebi.interpro.scan.batch.tasklet.FileWritingSystemCommandTasklet"
          abstract="true">
        <property name="commandLineConversation">
            <bean class="uk.ac.ebi.interpro.scan.batch.cli.CommandLineConversationImpl"/>
        </property>
        <property name="outputResource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <constructor-arg value="target/file-writing-command-test.out"/>
            </bean>
        </property>
        <property name="command"   value="hmmpfam"/>
        <property name="switches"  value="--cpu 1 --acc -E 20 -A 0 --cut_tc"/>
        <property name="arguments" value="src/test/resources/hmm/tigrfam_10.hmm file:src/test/resources/fasta/10.fasta"/>
    </bean>

    <bean id="goodCommand" parent="abstractTasklet"/>

    <bean id="badCommand" parent="abstractTasklet">
        <property name="command" value="BAD"/>
    </bean>

    <bean id="badSequence" parent="abstractTasklet">
        <property name="arguments" value="src/test/resources/hmm/tigrfam_10.hmm file:src/test/resources/fasta/10.BAD"/>
    </bean>

</beans>    
