<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

    <import resource="FastaLineAggregatorTest-context.xml"/>

    <!-- Generate single FASTA file from Protein -->
    <bean id="singleWriter" class="org.springframework.batch.item.file.FlatFileItemWriter">
        <property name="lineAggregator" ref="fastaLineAggregator"/>
        <property name="resource"       ref="singleResource"/>
    </bean>
    
    <bean id="singleResource" class="org.springframework.core.io.FileSystemResource">
        <constructor-arg value="target/singleWriter.fasta"/>
    </bean>

    <!-- Generate mutiple FASTA files from Protein -->
    <bean id="multiWriter" class="org.springframework.batch.item.file.MultiResourceItemWriter">
        <property name="delegate">
            <bean class="org.springframework.batch.item.file.FlatFileItemWriter">
                <property name="lineAggregator" ref="fastaLineAggregator"/>
            </bean>
        </property>
        <!--
            Note: this doesn't work as I expected - it writes however many items there are in the list, and creates a
                  new resource for the next write if itemCountLimitPerResource > items.size
                  For i5 purposes, either set this to 1 or to the tasklet.chunk.commit-interval
        -->
        <property name="itemCountLimitPerResource" value="1"/>
        <property name="resource" ref="multiResource"/>
    </bean>
    
    <bean id="multiResource" class="org.springframework.core.io.FileSystemResource">
        <constructor-arg value="target/multiWriter.fasta"/>
    </bean>

</beans>